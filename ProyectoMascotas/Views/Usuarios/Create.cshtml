@model ProyectoMascotas.Usuario

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Usuario</h4>
        <hr />
        <select name='TIPO' style='font-family:Verdana, verdana' onChange='ChangeUrlTipo(this.form)'>
            <option value=0 Selected>Selecciona</option>
            <option value=1>Individuo</option>
            <option value=2>Empresa</option>
        </select>
        <br /><br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div id="razonso" class="form-group" style="display:none">
               Razon Social
                <br /><br />
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Empresa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Empresa, "", new { @class = "text-danger" })
                </div>
            </div>

            <div id="nombrei" class="form-group" style="display:none">
 Nombre
                <br /><br />
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div id="apellidoi" class="form-group" style="display:none">
Apellido
                <br /><br />
