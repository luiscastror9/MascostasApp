}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script language='JavaScript'>
    function ChangeUrlTipo(formulaire) {
        if (formulaire.TIPO.selectedIndex == 1)
        {
            $('#razonso').hide();
            $('#cuit').hide();
            $('#nace').hide();
            $('#nombrei').css('display', 'block');
            $('#apellidoi').css('display', 'block');
            $('#dni').css('display', 'block');
            $('#naci').css('display', 'block');
            $('#nombredeu').css('display', 'block');
            $('#contradeu').css('display', 'block');
            $('#localidadu').css('display', 'block');
        }else{
        if (formulaire.TIPO.selectedIndex == 2) {
            $('#nombrei').hide();
            $('#apellidoi').hide();
            $('#dni').hide();
            $('#naci').hide();
            $('#razonso').css('display', 'block');
            $('#cuit').css('display', 'block');
            $('#nace').css('display', 'block');
            $('#nombredeu').css('display', 'block');
            $('#contradeu').css('display', 'block');
            $('#localidadu').css('display', 'block');
        } else {
            if (formulaire.TIPO.selectedIndex == 0) {
                $('#nombrei').hide();
                $('#apellidoi').hide();
                $('#razonso').hide();
                $('#dni').hide();
                $('#cuit').hide();
                $('#naci').hide();
                $('#nace').hide();
                $('#nombredeu').hide();
                $('#contradeu').hide();
                $('#localidadu').hide();
        }
        }
        }
    }
</script>