@model ProyectoMascotas.Usuario
<link rel="stylesheet" href="~/Content/cartelerastyle.css">

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fuild body-content">
    <br />
    <br />
    <br />


        

        <dl class="dl-horizontal">
            @if (Model.Tipo_de_usuario.Trim() == "2")
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Empresa)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Empresa)
                </dd>
            }
            else
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Apellido)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Apellido)
                </dd>
            }
            <dt>
                Nombre de Usuario
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre_de_Usuario)
            </dd>

            @*<dt>
                Contraseña
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Pass)
            </dd>*@

            <dt>
                @Html.DisplayNameFor(model => model.Localidad)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Localidad)
            </dd>

            <dt>
                Fecha de Nacimiento
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Fecha_de_nacimiento)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DNI)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DNI)
            </dd>

            @*<dt>
                Tipo de Usuario
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tipo_de_usuario)
            </dd>*@

            <dt>
                Email
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            @*<dd>
                @Html.DisplayFor(model => model.CPass)
            </dd>*@
        </dl>

    </div>
    <p>
        @Html.ActionLink("Editar Usuario", "Edit", new { id = Model.ID }) |
        @Html.ActionLink("Cambiar Contraseña", "Cambiarpass", new { id = Model.ID })
    </p>


    <div id="cartelera" class="container-fluid">
        @Html.Action("CarteleraUsuario", "Home")
    </div>
</div>
