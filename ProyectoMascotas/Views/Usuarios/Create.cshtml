}


<script language='JavaScript'>
    function ChangeUrlTipo(formulaire) {
        if (formulaire.TIPO.selectedIndex == 1) {
            $('#razonso').hide();
            $('#mcuit').hide();
            $('#mfi').hide();
            $('#nombrei').css('display', 'block');
            $('#apellidoi').css('display', 'block');
            $('#dni').css('display', 'block');
            $('#naci').css('display', 'block');
            $('#nombredeu').css('display', 'block');
            $('#contradeu').css('display', 'block');
            $('#localidadu').css('display', 'block');
            $('#boton').css('display', 'block');
            $('#mdni').css('display', 'block');
            $('#mfn').css('display', 'block');
            $('#email').css('display', 'block');
            $('#Tipo_de_usuario').attr('value', '1'); 

        } else {
            if (formulaire.TIPO.selectedIndex == 2) {
                $('#nombrei').hide();
                $('#apellidoi').hide();
                $('#mdni').hide();
                $('#mfn').hide();
                $('#razonso').css('display', 'block');
                $('#dni').css('display', 'block');
                $('#naci').css('display', 'block');
                $('#nombredeu').css('display', 'block');
                $('#contradeu').css('display', 'block');
                $('#localidadu').css('display', 'block');
                $('#boton').css('display', 'block');
                $('#mcuit').css('display', 'block');
                $('#email').css('display', 'block');
                $('#mfi').css('display', 'block');
                $('#Tipo_de_usuario').attr('value', '2');
            } else {
                if (formulaire.TIPO.selectedIndex == 0) {
                    $('#nombrei').hide();
                    $('#email').hide();
                    $('#apellidoi').hide();
                    $('#razonso').hide();
                    $('#dni').hide();
                    $('#cuit').hide();
                    $('#naci').hide();
                    $('#nace').hide();
                    $('#nombredeu').hide();
                    $('#contradeu').hide();
                    $('#localidadu').hide();
                    $('#boton').hide();
                    $('#mcuit').hide();
                    $('#mdni').hide();
                    $('#mfi').hide();
                    $('#mfn').hide();
                }
            }
        }
    }
</script>
