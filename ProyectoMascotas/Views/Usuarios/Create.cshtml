            Fecha de Inscripcion (AAAA-MM-DD)
            <br /><br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fecha_de_nacimiento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fecha_de_nacimiento, "", new { @class = "text-danger" })
            </div>
        </div>

            <div id="dni" class="form-group" style="display:none">
                DNI
                <br /><br />
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DNI, new { htmlAttributes = new { @class = "form-control" } })
